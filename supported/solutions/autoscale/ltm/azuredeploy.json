            }, 
            "type": "string"
        }, 
        "clientId": {
            "metadata": {
                "description": "Your Azure service principal application client ID."
            }, 
            "type": "string"
        }, 
        "servicePrincipalSecret": {
            "metadata": {
                "description": "Your Azure service principal application secret."
            }, 
            "type": "securestring"
        }, 
